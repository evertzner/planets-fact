---
import IconSource from '../icons/IconSource.astro';

interface Props {
  name: string;
  overview: {
    content: string;
    source: string;
  };
  structure: {
    content: string;
    source: string;
  };
  surface: {
    content: string;
    source: string;
  };
}

const { name, overview, structure, surface } = Astro.props;
---

<div
  class='flex flex-col items-center gap-8 self-stretch px-6 md:items-start md:self-start md:px-0 2xl:gap-6'
>
  <div class='flex flex-col items-center gap-4 self-stretch md:items-start md:gap-8'>
    <div
      class='text-center font-antonio text-[40px] font-light uppercase leading-[normal] text-white md:text-5xl md:font-extralight 2xl:text-[80px]'
    >
      {name}
    </div>
    <p
      data-name='Overview'
      class='inline self-stretch text-center text-[15px] font-extralight leading-[22px] text-white text-opacity-80 md:text-left md:text-[14px] 2xl:text-[18px] 2xl:leading-[25px]'
    >
      {overview.content}
    </p>
    <p
      data-name='Structure'
      class='hidden self-stretch text-center text-[15px] font-extralight leading-[22px] text-white text-opacity-80 md:text-left md:text-[14px] 2xl:text-[18px] 2xl:leading-[25px]'
    >
      {structure.content}
    </p>
    <p
      data-name='Surface'
      class='hidden self-stretch text-center text-[15px] font-extralight leading-[22px] text-white text-opacity-80 md:text-left md:text-[14px] 2xl:text-[18px] 2xl:leading-[25px]'
    >
      {surface.content}
    </p>
  </div>
  <div
    class='flex gap-1 text-base font-thin leading-[25px] text-white opacity-50 md:text-[15px] 2xl:text-[18px]'
  >
    Source:
    <a
      data-name='Overview'
      href={overview.source}
      target='_blank'
      class='flex items-center justify-center gap-1 font-normal underline underline-offset-2'
    >
      Wikipedia
      <IconSource />
    </a>
    <a
      data-name='Structure'
      href={structure.source}
      target='_blank'
      class='hidden items-center justify-center gap-1 font-normal underline underline-offset-2'
    >
      Wikipedia
      <IconSource />
    </a>
    <a
      data-name='Surface'
      href={surface.source}
      target='_blank'
      class='hidden items-center justify-center gap-1 font-normal underline underline-offset-2'
    >
      Wikipedia
      <IconSource />
    </a>
  </div>
</div>
