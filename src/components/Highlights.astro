---
interface Props {
  rotationTime: string;
  revolutionTime: string;
  radius: string;
  averageTemp: string;
}

const { rotationTime, revolutionTime, radius, averageTemp } = Astro.props;
---

<div
  class='flex px-6 md:px-10 pt-7 pb-12 md:pb-9 flex-col md:flex-row justify-center items-center gap-2 md:gap-2.5 self-stretch'
>
  <div
    class='flex flex-row md:flex-col pt-2.5 md:pt-4 pb-2.5 md:pb-5 px-6 md:px-4 justify-between md:justify-center items-center md:items-start md:gap-1.5 md:flex-1 self-stretch border border-white border-opacity-20 text-white'
  >
    <div
      class='opacity-50 text-[10px] uppercase leading-[16px] tracking-[0.727px] font-medium md:font-normal'
    >
      Rotation Time
    </div>
    <div
      class='font-antonio text-xl md:text-2xl leading-[normal] -tracking-[0.75px] uppercase font-extralight'
    >
      {rotationTime}
    </div>
  </div>
  <div
    class='flex flex-row md:flex-col pt-2.5 md:pt-4 pb-2.5 md:pb-5 px-6 md:px-4 justify-between md:justify-center items-center md:items-start md:gap-1.5 md:flex-1 self-stretch border border-white border-opacity-20 text-white'
  >
    <div
      class='opacity-50 text-[10px] uppercase leading-[16px] tracking-[0.727px] font-medium md:font-normal'
    >
      Revolution Time
    </div>
    <div
      class='font-antonio text-xl md:text-2xl leading-[normal] -tracking-[0.75px] uppercase font-extralight'
    >
      {revolutionTime}
    </div>
  </div>
  <div
    class='flex flex-row md:flex-col pt-2.5 md:pt-4 pb-2.5 md:pb-5 px-6 md:px-4 justify-between md:justify-center items-center md:items-start md:gap-1.5 md:flex-1 self-stretch border border-white border-opacity-20 text-white'
  >
    <div
      class='opacity-50 text-[10px] uppercase leading-[16px] tracking-[0.727px] font-medium md:font-normal'
    >
      Radius
    </div>
    <div
      class='font-antonio text-xl md:text-2xl leading-[normal] -tracking-[0.75px] uppercase font-extralight'
    >
      {radius}
    </div>
  </div>
  <div
    class='flex flex-row md:flex-col pt-2.5 md:pt-4 pb-2.5 md:pb-5 px-6 md:px-4 justify-between md:justify-center items-center md:items-start md:gap-1.5 md:flex-1 self-stretch border border-white border-opacity-20 text-white'
  >
    <div
      class='opacity-50 text-[10px] uppercase leading-[16px] tracking-[0.727px] font-medium md:font-normal'
    >
      Agerage temp.
    </div>
    <div
      class='font-antonio text-xl md:text-2xl leading-[normal] -tracking-[0.75px] uppercase font-extralight'
    >
      {averageTemp}
    </div>
  </div>
</div>
